@model GoogleCalendarEventInsert

@{
    ViewData["Title"] = "Crear Evento";
}

<h2>Crear Evento</h2>

<form method="post">
    <div class="form-group">
        <label for="summary">Título del Evento</label>
        <input type="text" class="form-control" id="summary" name="Summary" value="@Model.Summary" />
    </div>

    <div class="form-group">
        <label for="description">Descripción</label>
        <input type="text" class="form-control" id="description" name="Description" value="@Model.Description" />
    </div>

    <div class="form-group">
        <label for="startDateTime">Fecha y hora de inicio</label>
        <input type="datetime-local" class="form-control" id="Start" name="Start" value="@Model.Start" />
    </div>

    <div class="form-group">
        <label for="endDateTime">Fecha y hora de finalización</label>
        <input type="datetime-local" class="form-control" id="End" name="End" value="@Model.End" />
    </div>

    <button type="submit" class="btn btn-primary">Crear Evento</button>
</form>

